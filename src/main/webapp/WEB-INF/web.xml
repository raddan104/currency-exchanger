<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>CurrencyServlet</servlet-name>
        <servlet-class>edu.raddan.controller.currency.CurrencyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CurrencyServlet</servlet-name>
        <url-pattern>/currency/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CurrenciesServlet</servlet-name>
        <servlet-class>edu.raddan.controller.currency.CurrenciesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CurrenciesServlet</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExchangeRatesServlet</servlet-name>
        <servlet-class>edu.raddan.controller.exchange.ExchangeRatesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExchangeRatesServlet</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <servlet-class>edu.raddan.controller.exchange.ExchangeRateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExchangeRateServlet</servlet-name>
        <url-pattern>/exchangeRate/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExchangeServlet</servlet-name>
        <servlet-class>edu.raddan.controller.exchange.ExchangeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ExchangeServlet</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>
</web-app>
